
<div class="card text-dark bg-light mb-3">
  <div class="card-header"><h1>Log In</h1></div>
  <div class="card-body">
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3">
    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field mb-3">
    <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Password" %>
  </div>
      <% if devise_mapping.rememberable? %>
        <div class="field form-check">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me, class:"form-check-label" %>
        </div>
      <% end %>
      <br/>
      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
